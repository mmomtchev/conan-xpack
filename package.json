{
  "name": "@mmomtchev/conan-xpack",
  "version": "2.3.2-1",
  "description": "A xPack with conan",
  "scripts": {
    "postversion": "git push && git push --tags && node ./publish.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmomtchev/conan-xpack.git"
  },
  "keywords": [
    "conan",
    "node-api",
    "swig",
    "xpack"
  ],
  "author": "Momtchil Momtchev <momtchil@momtchev.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mmomtchev/conan-xpack/issues"
  },
  "homepage": "https://github.com/mmomtchev/conan-xpack#readme",
  "xpack": {
    "minimumXpmRequired": "0.19.1",
    "binaries": {
      "destination": "./.content",
      "rootUrl": "https://github.com/mmomtchev/conan-xpack/releases/download",
      "skip": 1,
      "platforms": {
        "darwin-arm64": {
          "fileName": "conan-xpack-2.3.2-1-darwin-arm64.tar.gz",
          "sha256": "8223c52d907fe21a3071821f8f539caa94bbeaff8a7531c695f201e6d16be5ee"
        },
        "darwin-x64": {
          "fileName": "conan-xpack-2.3.2-1-darwin-x64.tar.gz",
          "sha256": "40a8b99da5886c75d6de0e0181aade3b86d3dbdc233234fd8c5fac84334140fc"
        },
        "linux-x64": {
          "fileName": "conan-xpack-2.3.2-1-linux-x64.tar.gz",
          "sha256": "459301cf9d87a677725c26331bc34277fc97968668742b5a3aa1e66ea22e8e73"
        },
        "win32-x64": {
          "fileName": "conan-xpack-2.3.2-1-win32-x64.zip",
          "sha256": "9e1aad40530a69058d1ba86f3b6f670abaf0b480b54a8d4b7e60441b7af34de8"
        }
      },
      "baseUrl": "https://github.com/mmomtchev/conan-xpack/releases/download/v2.3.2-1"
    },
    "bin": {
      "conan": "./.content/bin/conan"
    },
    "properties": {
      "versionConan": "2.3.2",
      "commandInstall": "python -m pip install --target content conan=={{ properties.versionConan }}",
      "commandPostInstall": {
        "win32": "copy wrappers\\conan.cmd content\\bin\\conan.cmd && ren content\\bin\\conan.exe _conan.exe",
        "linux": "cp wrappers/conan content/bin/conan",
        "darwin": "cp wrappers/conan content/bin/conan"
      }
    },
    "actions": {
      "build": [
        "{{ properties.commandInstall }}",
        "{{ properties.commandPostInstall[os.platform] }}"
      ],
      "test": [
        ".{{ path.sep }}content{{ path.sep }}bin{{ path.sep }}conan --help"
      ]
    },
    "devDependencies": {
      "@mmomtchev/python-xpack": {
        "specifier": "3.12.3-2",
        "local": "link",
        "platforms": "all"
      }
    }
  },
  "dependencies": {
    "xpm": "^0.19.1"
  }
}