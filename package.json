{
  "name": "@mmomtchev/conan-xpack",
  "version": "2.22.1-1",
  "description": "A xPack with conan",
  "scripts": {
    "postversion": "git push && git push --tags && node ./publish.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmomtchev/conan-xpack.git"
  },
  "keywords": [
    "conan",
    "node-api",
    "swig",
    "xpack"
  ],
  "author": "Momtchil Momtchev <momtchil@momtchev.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mmomtchev/conan-xpack/issues"
  },
  "homepage": "https://github.com/mmomtchev/conan-xpack#readme",
  "xpack": {
    "minimumXpmRequired": "0.19.1",
    "binaries": {
      "destination": "./.content",
      "rootUrl": "https://github.com/mmomtchev/conan-xpack/releases/download",
      "skip": 1,
      "platforms": {
        "darwin-arm64": {
          "fileName": "conan-xpack-2.22.1-1-darwin-arm64.tar.gz",
          "sha256": "1255ef9bab4e9fd0308c4162dbbcd0ce8064f42138219e94daf1f61b9ddc108c"
        },
        "darwin-x64": {
          "fileName": "conan-xpack-2.22.1-1-darwin-x64.tar.gz",
          "sha256": "6b8f2e2a427cd07e35c1d09abca8298544a954663237dd13bc1e5347ee51c3f4"
        },
        "linux-x64": {
          "fileName": "conan-xpack-2.22.1-1-linux-x64.tar.gz",
          "sha256": "4ce1213712ce23cb8c1d65a33fd449420a7ff9e6625aebc2d49db295a8d9cd54"
        },
        "win32-x64": {
          "fileName": "conan-xpack-2.22.1-1-win32-x64.zip",
          "sha256": "a2cb2d9f6b6378c40c4c481fb7f3bbaaf11d1e6df13cca055952fbc420ca63f4"
        },
        "linux-arm64": {
          "fileName": "conan-xpack-2.22.1-1-linux-arm64.tar.gz",
          "sha256": "012888dca997deec228a01d6ad54d781476394d2304e9c167463024ef9059f6c"
        },
        "win32-arm64": {
          "fileName": "conan-xpack-2.22.1-1-win32-arm64.zip",
          "sha256": "7d479da465af83142553afefb0b2194f63cabebce31fbada055994ddcc1b9f0b"
        }
      },
      "baseUrl": "https://github.com/mmomtchev/conan-xpack/releases/download/v2.22.1-1"
    },
    "bin": {
      "conan": "./.content/bin/conan"
    },
    "properties": {
      "versionConan": "2.22.1",
      "commandInstall": "python -m pip install --target content conan=={{ properties.versionConan }}",
      "commandPostInstall": {
        "win32": "copy wrappers\\conan content\\bin\\conan && cl wrappers\\wrapper.c /Fe:content\\bin\\conan.exe /link",
        "linux": "cp wrappers/conan content/bin/conan",
        "darwin": "cp wrappers/conan content/bin/conan"
      }
    },
    "actions": {
      "build": [
        "{{ properties.commandInstall }}",
        "{{ properties.commandPostInstall[os.platform] }}"
      ],
      "test": [
        ".{{ path.sep }}content{{ path.sep }}bin{{ path.sep }}conan version",
        ".{{ path.sep }}content{{ path.sep }}bin{{ path.sep }}conan profile show"
      ]
    },
    "devDependencies": {
      "@mmomtchev/python-xpack": {
        "specifier": "3.12.11-2",
        "local": "link",
        "platforms": "all"
      }
    }
  },
  "dependencies": {
    "xpm": "^0.19.1"
  }
}