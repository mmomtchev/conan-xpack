{
  "name": "@mmomtchev/conan-xpack",
  "version": "2.18.1-1",
  "description": "A xPack with conan",
  "scripts": {
    "postversion": "git push && git push --tags && node ./publish.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmomtchev/conan-xpack.git"
  },
  "keywords": [
    "conan",
    "node-api",
    "swig",
    "xpack"
  ],
  "author": "Momtchil Momtchev <momtchil@momtchev.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mmomtchev/conan-xpack/issues"
  },
  "homepage": "https://github.com/mmomtchev/conan-xpack#readme",
  "xpack": {
    "minimumXpmRequired": "0.19.1",
    "binaries": {
      "destination": "./.content",
      "rootUrl": "https://github.com/mmomtchev/conan-xpack/releases/download",
      "skip": 1,
      "platforms": {
        "darwin-arm64": {
          "fileName": "conan-xpack-2.18.1-1-darwin-arm64.tar.gz",
          "sha256": "7a748ab00d3b23e41a69220f2d5de18aab9a87a4e5e7aac6e78a23eb3f939048"
        },
        "darwin-x64": {
          "fileName": "conan-xpack-2.18.1-1-darwin-x64.tar.gz",
          "sha256": "aa7f03b0a49437757b631e6827a4d45b750acf5487c246d77eebfaaf23496c14"
        },
        "linux-x64": {
          "fileName": "conan-xpack-2.18.1-1-linux-x64.tar.gz",
          "sha256": "e90aa9896cb168d751e91d7824903e16fafcf369ded703cc7d35b01ed61e6bcc"
        },
        "win32-x64": {
          "fileName": "conan-xpack-2.18.1-1-win32-x64.zip",
          "sha256": "94a86bdea1966fdfb87662807483d9dfa22ec31a335b19176288f3aa4c6aed6b"
        }
      },
      "baseUrl": "https://github.com/mmomtchev/conan-xpack/releases/download/v2.18.1-1"
    },
    "bin": {
      "conan": "./.content/bin/conan"
    },
    "properties": {
      "versionConan": "2.18.1",
      "commandInstall": "python -m pip install --target content conan=={{ properties.versionConan }}",
      "commandPostInstall": {
        "win32": "copy wrappers\\conan content\\bin\\conan && cl wrappers\\wrapper.c /Fe:content\\bin\\conan.exe /link",
        "linux": "cp wrappers/conan content/bin/conan",
        "darwin": "cp wrappers/conan content/bin/conan"
      }
    },
    "actions": {
      "build": [
        "{{ properties.commandInstall }}",
        "{{ properties.commandPostInstall[os.platform] }}"
      ],
      "test": [
        ".{{ path.sep }}content{{ path.sep }}bin{{ path.sep }}conan version",
        ".{{ path.sep }}content{{ path.sep }}bin{{ path.sep }}conan profile show"
      ]
    },
    "devDependencies": {
      "@mmomtchev/python-xpack": {
        "specifier": "3.12.11-2",
        "local": "link",
        "platforms": "all"
      }
    }
  },
  "dependencies": {
    "xpm": "^0.19.1"
  }
}
